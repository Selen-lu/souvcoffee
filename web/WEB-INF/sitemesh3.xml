<sitemesh>
<!-- 갖다 붙일 경로 지정-->
    <!--path => 컨트롤러에서 인터셉트 해오는 경로 == > /* 이면 컨트롤러에서 main 뷰로 보내는 경로
    decorator => 여 jsp에 장식이 되어라
    == 뷰의 경로를 뺏어서 데코레이터에 붙이는듯
    -->
    <!--네비게이션 네비바 , footer
     큰 틀은 mapping으로
    -->


    <!-- 기본적으로  3 개의  태그를 사용하는 (head , body , footer) sitemesh는
    Content-Type이 text / html 인 HTTP 응답 헤더 만 가로 채서 장식하는데,
    이 외 더 많은 MIME 유형을 추가 할 수있 음-->
    <mime-type>text/html</mime-type>
    <mime-type>application/vnd.wap.xhtml+xml</mime-type>
    <mime-type>application/xhtml+xml</mime-type>

    <!--사용자 정의 태그 규칙-->
    <content-processor>
        <tag-rule-bundle class="com.something.CssCompressingBundle">

        </tag-rule-bundle>

        <tag-rule-bundle class="com.something.LinkRewritingBundle">

        </tag-rule-bundle>
    </content-processor>

    <mapping path="/*">
        <decorator>/WEB-INF/views/decorators/defaultDecorator.jsp</decorator>
    </mapping>


    <mapping path="/admin.do">
    <decorator>/WEB-INF/views/decorators/adminDecorator.jsp</decorator>
    </mapping>

    <mapping path="/user.do">
    <decorator>/WEB-INF/views/decorators/userDecorator.jsp</decorator>
    </mapping>





